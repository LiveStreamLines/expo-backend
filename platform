server {
    # Listen for HTTPS traffic
    listen 443 ssl default_server;
    server_name 192.168.1.101 lsl-platform.com localhost;

    client_max_body_size 50M;
    # Paths to the self-signed SSL certificate and private key
    ssl_certificate /etc/ssl/certs/nginx-selfsigned.crt;
    ssl_certificate_key /etc/ssl/private/nginx-selfsigned.key;

    # Strong SSL security settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH";

    # Serve /hik files directly from /var/www/hik
    location /hik/ {
        root /var/www;
        index gugg1.html demo.htm;
        try_files $uri $uri/ =404;

        # Enable COOP/COEP so SharedArrayBuffer is available
        add_header Cross-Origin-Opener-Policy "same-origin" always;
        add_header Cross-Origin-Embedder-Policy "require-corp" always;
        add_header Cross-Origin-Resource-Policy "cross-origin" always;
        add_header Access-Control-Allow-Origin "*" always;
        add_header Access-Control-Allow-Methods "GET, OPTIONS" always;
        add_header Access-Control-Allow-Headers "*" always;
        add_header Access-Control-Allow-Credentials "false" always;
        add_header X-Content-Type-Options "nosniff" always;

        add_header Content-Security-Policy "frame-ancestors 'self' http://localhost http://localhost:4200 https://localhost https://localhost:4200" always;
        add_header X-Frame-Options "" always;
    }

    location /livefeed/ {
        alias /var/www/livefeed-app/;
        try_files $uri $uri/ /livefeed/index.html;

        # Ensure the app (and all subresources) are cross-origin isolated
        add_header Cross-Origin-Opener-Policy "same-origin" always;
        add_header Cross-Origin-Embedder-Policy "require-corp" always;
        add_header Cross-Origin-Resource-Policy "same-origin" always;
        add_header X-Content-Type-Options "nosniff" always;

        # Allow the app to be framed only by itself
        add_header Content-Security-Policy "frame-ancestors 'self'" always;
    }

    # Operation
    location /operation/ {
        alias /var/www/operation/;
        index index.html;
        try_files $uri $uri/ /operation/index.html;

        # Security headers
        add_header Cross-Origin-Opener-Policy "same-origin" always;
        add_header Cross-Origin-Embedder-Policy "require-corp" always;
        add_header Cross-Origin-Resource-Policy "same-origin" always;
        add_header X-Content-Type-Options "nosniff" always;
    } 
    
    # Operation - Updated /v2/ location block with relaxed COEP for images
    location /v2/ {
        alias /var/www/v2/;
        index index.html;
        try_files $uri $uri/ /v2/index.html;

        # Security headers (relaxed for image loading)
        add_header Cross-Origin-Opener-Policy "same-origin" always;
        # Changed from "require-corp" to allow images from proxy
        add_header Cross-Origin-Embedder-Policy "unsafe-none" always;
        # Changed from "same-origin" to allow images from proxy
        add_header Cross-Origin-Resource-Policy "cross-origin" always;
        add_header X-Content-Type-Options "nosniff" always;

        # Cache static assets
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }

      # Operation - Updated /v2/ location block with relaxed COEP for images
    location /expo/ {
        alias /var/www/expo/;
        index index.html;
        try_files $uri $uri/ /expo/index.html;

        # Security headers (relaxed for image loading)
        add_header Cross-Origin-Opener-Policy "same-origin" always;
        # Changed from "require-corp" to allow images from proxy
        add_header Cross-Origin-Embedder-Policy "unsafe-none" always;
        # Changed from "same-origin" to allow images from proxy
        add_header Cross-Origin-Resource-Policy "cross-origin" always;
        add_header X-Content-Type-Options "nosniff" always;

        # Cache static assets
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }
 
    # Mobile Angular app serving from /var/www/mobile
    location /mobile/ {
        alias /var/www/mobile/;
        index index.html;
        try_files $uri $uri/ /mobile/index.html;

        # Security headers
        add_header Cross-Origin-Opener-Policy "same-origin" always;
        add_header Cross-Origin-Embedder-Policy "require-corp" always;
        add_header Cross-Origin-Resource-Policy "same-origin" always;
        add_header X-Content-Type-Options "nosniff" always;
    }
    
    # Angular app serving
    location / {
        root /var/www/platform;
        index index.html;
        try_files $uri /index.html;

        add_header Cross-Origin-Embedder-Policy "require-corp" always;
        add_header Cross-Origin-Opener-Policy "same-origin" always;
        add_header Cross-Origin-Resource-Policy "same-origin" always;
        add_header X-Content-Type-Options "nosniff" always;
    }

    # CRITICAL: Image proxy endpoint - must be BEFORE /backend/ location
    # This endpoint proxies images from S3 with proper CORS headers
    location /backend/api/camerapics-s3-test/proxy/ {
        proxy_pass http://127.0.0.1:5000/api/camerapics-s3-test/proxy/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # CRITICAL: Don't buffer the response for images (allows streaming)
        proxy_buffering off;
        proxy_request_buffering off;

        # Increase timeouts for large images
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # CRITICAL: Remove COEP header that blocks cross-origin resources
        add_header 'Cross-Origin-Embedder-Policy' 'unsafe-none' always;
        
        # Add CORS headers for image responses (only here, not in general /backend/)
        add_header 'Access-Control-Allow-Origin' '*' always;
        add_header 'Access-Control-Allow-Methods' 'GET, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'Content-Type, Authorization' always;
        add_header 'Access-Control-Expose-Headers' 'Content-Length, Content-Type' always;
        
        # Allow images to be embedded (relaxed security for images)
        add_header 'Cross-Origin-Resource-Policy' 'cross-origin' always;

        # Cache images for 1 hour
        proxy_cache_valid 200 1h;
        add_header Cache-Control "public, max-age=3600";

        # Handle preflight requests
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Methods' 'GET, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'Content-Type, Authorization';
            add_header 'Access-Control-Max-Age' 1728000;
            add_header 'Cross-Origin-Embedder-Policy' 'unsafe-none';
            add_header 'Content-Type' 'text/plain; charset=utf-8';
            add_header 'Content-Length' 0;
            return 204;
        }
    }

    # Proxy all /backend/ requests to backend server
    # NOTE: CORS headers are handled by the backend, not nginx, to avoid duplicate headers
    location /backend/ {
        proxy_pass http://127.0.0.1:5000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_cache_bypass $http_upgrade;

        # Handle preflight requests (OPTIONS) - let backend handle CORS headers
        if ($request_method = 'OPTIONS') {
            proxy_pass http://127.0.0.1:5000$request_uri;
            break;
        }
    }

    location /proxy/ {
        proxy_pass http://127.0.0.1:3000/proxy;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /camera-backend/ {
        proxy_pass http://127.0.0.1:9000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /newplatform/ {
        proxy_pass http://127.0.0.1:4200/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /stream/ {
        proxy_pass http://127.0.0.1:9500/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
	
    error_page 404 /index.html;
    # Enable gzip compression for better performance
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;
    gzip_proxied any;
    gzip_min_length 1000;
}

